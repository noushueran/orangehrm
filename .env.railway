# Railway Environment Variables for OrangeHRM
# These will be automatically set by Railway when using MySQL addon

# Database Configuration (Auto-populated by Railway MySQL addon)
DB_HOST=${{MySQL.MYSQL_HOST}}
DB_PORT=${{MySQL.MYSQL_PORT}}
DB_NAME=${{MySQL.MYSQL_DATABASE}}
DB_USER=${{MySQL.MYSQL_USER}}
DB_PASSWORD=${{MySQL.MYSQL_PASSWORD}}

# OrangeHRM Admin Configuration
OHRM_ADMIN_USERNAME=Admin
OHRM_ADMIN_PASSWORD=Ohrm@1423
OHRM_ADMIN_EMAIL=admin@example.com

# Organization Configuration
OHRM_ORGANIZATION_NAME=OrangeHRM
OHRM_COUNTRY=US

# Application Environment
RAILWAY_ENVIRONMENT=production
PHP_ENV=production

# Optional: Custom domain (set this if you have a custom domain)
# RAILWAY_STATIC_URL=your-custom-domain.com
